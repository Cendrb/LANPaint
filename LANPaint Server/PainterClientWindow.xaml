<UserControl x:Class="LANPaint_Server.PainterClientWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:ext="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" Height="78" Width="220" Background="#FFFBFBFB">
    <Grid>
        <Label x:Name="nameLabel" Content="Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Button x:Name="kickButton" Content="Kick" Margin="175,0,10,11" Click="kickButton_Click" Height="21" VerticalAlignment="Bottom"/>
        <Button x:Name="permissionsButton" Content="Change permissions..." HorizontalAlignment="Left" Height="22" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="160" Click="permissionsButton_Click"/>
    </Grid>
</UserControl>
