<Window x:Class="LANPaint_Server.Permissions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Permissions" Height="216" Width="300">
    <Grid>
        <CheckBox x:Name="manipulateOwnLines" Content="Draw &amp; Manipulate his own lines" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="manipulateOtherLines" Content="Manipulate other's lines" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="manipulateOwnObjects" Content="Create &amp; Manipulate his own objects" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="manipulateOtherObjects" Content="Manipulate other's objects" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="wipeLines" Content="Wipe lines" HorizontalAlignment="Left" Margin="10,112,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="wipeObjects" Content="Wipe objects" HorizontalAlignment="Left" Margin="10,133,0,0" VerticalAlignment="Top"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="272" Click="Button_Click"/>
        <CheckBox x:Name="usePointers" Content="Use pointers" HorizontalAlignment="Left" Margin="10,91,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
