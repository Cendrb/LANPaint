<Window x:Class="LANPaint_Client.ConnectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connect" Height="151" Width="300">
    <Grid>
        <Label Content="Your username" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="usernameBox" HorizontalAlignment="Left" Height="23" Margin="105,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="177" Text="Client"/>
        <Label Content="Server IP" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Button x:Name="connectButton" Content="Connect" HorizontalAlignment="Left" Width="272" Margin="10,0,0,10" Height="33" VerticalAlignment="Bottom" Click="connectButton_Click"/>
        <TextBox x:Name="ipBox" HorizontalAlignment="Left" Height="23" Margin="105,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="177" Text="127.0.0.1"/>

    </Grid>
</Window>
